CREATE TABLE comrade(
  id INTEGER PRIMARY KEY NOT NULL,
  packageName TEXT NOT NULL,
  packageSignature TEXT NOT NULL,
  filePath TEXT,
  localFilePath TEXT NOT NULL,
  dateTime INTEGER NOT NULL
);

insertFileInfo:
INSERT INTO comrade (packageName, packageSignature, filePath, localFilePath, dateTime)
VALUES (?, ?, ?, ?, ?);


setFilePath:
UPDATE comrade SET filePath = :filePath WHERE id = :id;

getAllFilesList:
SELECT * FROM comrade;
